{
    "compileOnSave": true,
    "noImplicitAny": false,
    "NODE_OPTIONS": ["--inspect=9230"],
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "allowJs": true,
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.html",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
  }